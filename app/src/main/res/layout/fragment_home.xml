<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:padding="16dp"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:scaleType="centerInside"/>

        <!-- Welcome Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to CargoGuard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:padding="16dp"
            android:gravity="center"/>

        <!-- Introduction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At CargoGuard, we prioritize the safety and security of your cargo. Our innovative cargo lock system ensures peace of mind for truck owners and operators, offering real-time updates and tracking capabilities right at your fingertips."
            android:textSize="16sp"
            android:textColor="#666666"
            android:padding="16dp" />

        <!-- Key Features Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="16dp" />

        <!-- Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lock_icon"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lock and unlock your cargo truck remotely with ease."
                    android:textSize="16sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notification_icon"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Receive instant notifications whenever the lock status changes, ensuring the safety of your cargo at all times."
                    android:textSize="16sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/management_icon"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Effortlessly manage your cargo details, including driver information, truck number, contents, and weights."
                    android:textSize="16sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/truck_tracking_icon"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your truck's current location in real-time using integrated Google Maps functionality."
                    android:textSize="16sp"
                    android:textColor="#666666"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>